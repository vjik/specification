{
    "name": "vjik/specification",
    "type": "library",
    "description": "Implementation of Specification pattern",
    "keywords": [
        "php",
        "specification",
        "pattern"
    ],
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/vjik/specification/issues?state=open",
        "source": "https://github.com/vjik/specification"
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "maglnet/composer-require-checker": "^4.14",
        "phpunit/phpunit": "^10.5",
        "roave/infection-static-analysis-plugin": "^1.35",
        "vimeo/psalm": "^5.26"
    },
    "autoload": {
        "psr-4": {
            "Vjik\\Specification\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vjik\\Specification\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix",
        "test-psalm": "vendor/bin/psalm --config=psalm.test.xml"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "composer/package-versions-deprecated": true
        }
    }
}
